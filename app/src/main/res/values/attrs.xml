<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="NavigationTabStrip">
        <attr name="nts_color" format="color"/>
        <attr name="nts_size" format="dimension"/>
        <attr name="nts_weight" format="dimension"/>
        <attr name="nts_factor" format="float"/>
        <attr name="nts_titles" format="reference"/>

        <attr name="nts_type" format="enum">
            <enum name="line" value="0"/>
            <enum name="point" value="1"/>
        </attr>
        <attr name="nts_gravity" format="enum">
            <enum name="bottom" value="0"/>
            <enum name="top" value="1"/>
        </attr>

        <attr name="nts_typeface" format="string"/>
        <attr name="nts_corners_radius" format="dimension"/>
        <attr name="nts_animation_duration" format="integer"/>

        <attr name="nts_inactive_color" format="color"/>
        <attr name="nts_active_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="AnimateCheckBox">
        <attr name="unCheckColor" format="color"/>
        <attr name="checkedColor" format="color"/>
        <attr name="lineColor" format="color"/>
        <attr name="linewidth" format="dimension"/>
        <attr name="animDuration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="Shuffle">
        <attr name="shuffle_orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="shuffle_inlineMove" format="boolean"/>
        <attr name="shuffle_rotationEnabled" format="boolean"/>
        <attr name="shuffle_rotation" format="float"/>
        <attr name="shuffle_velocityMin" format="float"/>
        <attr name="shuffle_numberOfDisplayedCards" format="integer"/>
        <attr name="shuffle_differenceScale" format="float"/>
        <attr name="shuffle_differenceTranslationY" format="dimension"/>
        <attr name="shuffle_differenceTranslationX" format="dimension"/>
        <attr name="shuffle_colorLeft" format="color"/>
        <attr name="shuffle_colorRight" format="color"/>
        <attr name="shuffle_layoutLeft" format="reference"/>
        <attr name="shuffle_layoutRight" format="reference"/>
        <attr name="shuffle_stackFrom" format="enum">
            <enum name="top" value="0"/>
            <enum name="bottom" value="1"/>
        </attr>
        <attr name="shuffle_infinite" format="boolean"/>
    </declare-styleable>
</resources>