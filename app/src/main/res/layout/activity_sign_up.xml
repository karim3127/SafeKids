<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_signup"
    tools:context="com.yako.safekids.activity.SignUp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#0fff"
        app:theme="@style/blueStyle"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginRight="64dp"
        android:text="تسجيل الدخول"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_medium_size"
        android:gravity="center_vertical|right" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgUser"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    app:border_color="@color/colorPrimary"
                    app:border_width="3dp"
                    android:src="@drawable/ic_avatar"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp" />

                <ImageView
                    android:id="@+id/img_new_img"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_alignBottom="@+id/imgUser"
                    android:layout_alignRight="@+id/imgUser"
                    android:src="@drawable/ic_upload_image"
                    android:layout_marginRight="-4dp"
                    android:layout_marginBottom="-4dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_name_blue"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/et_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text=""
                    android:hint="الاسم بالكامل"
                    android:textSize="@dimen/text_normal_size"
                    android:textColorHint="@color/colorGray"
                    android:textColor="@color/colorGray"
                    android:padding="8dp"
                    android:layout_marginRight="56dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="right" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_login_blue"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/et_login"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text=""
                    android:hint="إسم المستخدم"
                    android:digits="abcdefghijklmnopqrstuvwxyz0123456789._-"
                    android:textSize="@dimen/text_normal_size"
                    android:textColorHint="@color/colorGray"
                    android:textColor="@color/colorGray"
                    android:padding="8dp"
                    android:layout_marginRight="56dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="right" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_password_blue"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/et_pass"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text=""
                    android:hint="كلمة المرور"
                    android:inputType="textPassword"
                    android:textSize="@dimen/text_normal_size"
                    android:textColorHint="@color/colorGray"
                    android:textColor="@color/colorGray"
                    android:padding="8dp"
                    android:layout_marginRight="56dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="right" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_ville_blue"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/et_city"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text=""
                    android:hint="المدينة"
                    android:textSize="@dimen/text_normal_size"
                    android:textColorHint="@color/colorGray"
                    android:textColor="@color/colorGray"
                    android:padding="8dp"
                    android:layout_marginRight="56dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="right" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_phone_blue"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="رقم الهاتف"
                    android:textSize="@dimen/text_normal_size"
                    android:inputType="numberDecimal"
                    android:digits="0123456789"
                    android:textColorHint="@color/colorGray"
                    android:textColor="@color/colorGray"
                    android:layout_marginRight="56dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="right"
                    android:paddingTop="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="100dp" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imgFlag"
                    android:layout_width="36dp"
                    android:layout_height="32dp"
                    android:src="@drawable/f230"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="2dip"
                    android:layout_marginLeft="24dp"
                    android:layout_centerVertical="true"
                    android:paddingBottom="12dp" />

                <TextView
                    android:layout_toRightOf="@+id/imgFlag"
                    android:id="@+id/txtCodeContry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+216"
                    android:textSize="@dimen/text_medium_size"
                    android:textColor="@color/colorGray"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:paddingBottom="12dp" />

                <View
                    android:layout_toRightOf="@+id/txtCodeContry"
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:background="#cbcbcb"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_car_blue"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/et_car_type"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text=""
                    android:hint="نوع السيارة"
                    android:textSize="@dimen/text_normal_size"
                    android:textColorHint="@color/colorGray"
                    android:textColor="@color/colorGray"
                    android:padding="8dp"
                    android:layout_marginRight="56dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="right" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_car_color_blue"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/et_car_color"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text=""
                    android:hint="لون السيارة"
                    android:textSize="@dimen/text_normal_size"
                    android:textColorHint="@color/colorGray"
                    android:textColor="@color/colorGray"
                    android:padding="8dp"
                    android:layout_marginRight="56dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="right" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_car_num_blue"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/et_car_num"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text=""
                    android:hint="رقم السيارة"
                    android:textSize="@dimen/text_normal_size"
                    android:textColorHint="@color/colorGray"
                    android:textColor="@color/colorGray"
                    android:padding="8dp"
                    android:layout_marginRight="56dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="right" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/txtSignup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="تسجيل دخول"
                    android:textSize="@dimen/text_normal_size"
                    android:textColor="#fff"
                    android:background="@drawable/back_rounded_blue"
                    android:paddingRight="36dp"
                    android:paddingLeft="36dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />

                <com.wang.avi.AVLoadingIndicatorView
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:id="@+id/avloadingIndicatorView"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_alignLeft="@+id/txtSignup"
                    android:layout_alignRight="@+id/txtSignup"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/colorPrimary"
                    app:indicator="BallPulse"
                    app:indicator_color="#fff" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
