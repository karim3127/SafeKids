<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash"
    android:fitsSystemWindows="true"
    tools:context="com.yako.safekids.activity.RequestAlert">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="16dp"
                android:src="@drawable/ic_logo" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/yesss" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:minHeight="100dp">

                        <TextView
                            android:id="@+id/tv_top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="@string/alerte_red_text_notif"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_small_medium_size" />

                        <RelativeLayout
                            android:id="@+id/rl_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_top"
                            android:layout_marginTop="3dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_alignParentRight="false"
                                android:layout_marginLeft="8dp"
                                android:padding="12dp"
                                android:src="@drawable/ic_car_blue" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="56dp"
                                android:layout_marginRight="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="left|center_vertical"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:text="@string/car_type"
                                    android:textColor="@color/colorGray"
                                    android:textSize="@dimen/text_small_medium_size" />

                                <TextView
                                    android:id="@+id/et_car_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:gravity="left|center_vertical"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:text=""
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/text_normal_size" />
                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl_type"
                            android:layout_marginTop="3dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_alignParentRight="false"
                                android:layout_marginLeft="8dp"
                                android:padding="12dp"
                                android:src="@drawable/ic_car_color_blue" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="56dp"
                                android:layout_marginRight="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="left|center_vertical"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:text="@string/cart_color"
                                    android:textColor="@color/colorGray"
                                    android:textSize="@dimen/text_small_medium_size" />

                                <TextView
                                    android:id="@+id/et_car_color"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left|center_vertical"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:layout_marginTop="3dp"
                                    android:text=""
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/text_normal_size" />
                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl_color"
                            android:layout_marginTop="3dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_alignParentRight="false"
                                android:layout_marginLeft="8dp"
                                android:padding="12dp"
                                android:src="@drawable/ic_car_num_blue" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="56dp"
                                android:layout_marginRight="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="left|center_vertical"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:text="@string/car_number"
                                    android:textColor="@color/colorGray"
                                    android:textSize="@dimen/text_small_medium_size" />

                                <TextView
                                    android:id="@+id/et_car_num"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left|center_vertical"
                                    android:layout_marginTop="3dp"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:text=""
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/text_normal_size" />
                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl_number"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_cancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="24dp"
                                android:gravity="center"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="@string/alerte_not_cancel"
                                android:textColor="@color/colorRed"
                                android:textSize="@dimen/text_medium_size" />

                            <TextView
                                android:id="@+id/tv_valid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:gravity="center"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="@string/alerte_stop_Valid"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/text_medium_size" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
