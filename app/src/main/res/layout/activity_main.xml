<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_signup"
    tools:context="com.yako.safekids.activity.MainActivity">

    <ImageView
        android:id="@+id/imgDrawer"
        android:layout_width="38dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_home_drawer_blue"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp" />

    <ImageView
        android:id="@+id/imgHelp"
        android:layout_width="38dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_help"
        android:layout_marginLeft="14dp" />

    <ImageView
        android:id="@+id/imgTranslate"
        android:layout_width="38dp"
        android:layout_height="56dp"
        android:layout_marginLeft="56dp"
        android:src="@drawable/ic_translate" />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_above="@+id/llBottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_center"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_no_safe" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_add_kids"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="أضف أطفال"
                        android:textSize="@dimen/text_normal_size"
                        android:textColor="#fff"
                        android:background="@drawable/back_rounded_blue"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:paddingRight="36dp"
                        android:paddingLeft="36dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_phones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="أرقام الحماية"
                        android:textSize="@dimen/text_normal_size"
                        android:textColor="#fff"
                        android:background="@drawable/back_rounded_blue"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:paddingRight="36dp"
                        android:paddingLeft="36dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_safe_kids"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="إحمي طفلك"
                        android:textSize="@dimen/text_normal_size"
                        android:textColor="#fff"
                        android:background="@drawable/back_rounded_gray"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:paddingRight="36dp"
                        android:paddingLeft="36dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_delete_safe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="إلغاء الحماية"
                        android:textSize="@dimen/text_normal_size"
                        android:textColor="#fff"
                        android:background="@drawable/back_rounded_blue"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:paddingRight="36dp"
                        android:paddingLeft="36dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_no_oxygen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="نقص بالاكسجين .. تفقد السيارة"
                        android:textSize="@dimen/text_normal_size"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_over_speed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="تجاوز السرعة .. تفقد السيارة"
                        android:textSize="@dimen/text_normal_size"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_top_hot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="انخفاض درجة الحرارة .. تفقد السيارة"
                        android:textSize="@dimen/text_normal_size"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تابعنا عبر"
                        android:textSize="@dimen/text_normal_size"
                        android:textColor="#7c7c7c"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/img_fb"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_facebook"
                        android:padding="1dp" />

                    <ImageView
                        android:id="@+id/img_tw"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_twitter"
                        android:padding="1dp"
                        android:layout_marginLeft="8dp" />

                    <ImageView
                        android:id="@+id/img_g"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_google"
                        android:padding="1dp"
                        android:layout_marginLeft="8dp" />

                    <ImageView
                        android:id="@+id/img_in"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_instagram"
                        android:padding="1dp"
                        android:layout_marginLeft="8dp" />

                    <ImageView
                        android:id="@+id/img_y"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_youtube"
                        android:padding="1dp"
                        android:layout_marginLeft="8dp" />

                    <ImageView
                        android:id="@+id/img_p"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_pintrest"
                        android:padding="1dp"
                        android:layout_marginLeft="8dp" />

                    <ImageView
                        android:id="@+id/img_s"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_snapshat"
                        android:padding="1dp"
                        android:layout_marginLeft="8dp" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <fragment
            android:id="@+id/fragment_navigation_drawer"
            android:name="com.yako.safekids.fragment.NavigationDrawerFragment"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            app:layout="@layout/fragment_home_drawer"
            tools:layout="@layout/fragment_home_drawer" />

    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>