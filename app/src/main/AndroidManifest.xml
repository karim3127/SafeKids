            android:name="com.yako.safekids.service.MonitorService"
            android:exported="true"
            android:enabled="true"
            android:stopWithTask="false" />
        <service
            android:name="com.yako.safekids.service.NotiNearbyService"
            android:exported="true"
            android:enabled="true"
            android:stopWithTask="false" />
        <service
            android:name="com.yako.safekids.service.SpeedService"
            android:exported="true"
            android:enabled="true"
            android:stopWithTask="false" />
        <service
            android:name="com.yako.safekids.service.GpsServices"
            android:exported="true"
            android:enabled="true"
            android:stopWithTask="false" />

        <receiver android:name="com.yako.safekids.receiver.AlarmManagerBroadcastReceiver" />
        <receiver android:name="com.yako.safekids.receiver.MyBroadcastService"
            android:enabled="true"
            android:exported="true"
            android:stopWithTask="false"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED">
                    <category android:name="android.intent.category.DEFAULT"/>
                </action>
            </intent-filter>
        </receiver>
