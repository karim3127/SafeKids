            android:name="com.yako.safekids.activity.KidsEdit"
            android:label="@string/title_activity_kids_edit"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="com.yako.safekids.activity.KidsList"
            android:label="@string/title_activity_kids_list"
            android:screenOrientation="portrait"
