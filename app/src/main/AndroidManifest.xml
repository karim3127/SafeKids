            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.yako.safekids.activity.NormalAlert"
            android:label="@string/title_activity_normal_alert"
            android:screenOrientation="portrait"
            android:theme="@style/Translucent" />
        <activity
            android:name="com.yako.safekids.activity.RequestAlert"
            android:label="@string/title_activity_normal_alert"
            android:screenOrientation="portrait"
            android:theme="@style/AppLogoTransparentTheme" />
        <activity
            android:name="com.yako.safekids.activity.AlertSpeed"
            android:label="@string/title_activity_normal_alert"
            android:screenOrientation="portrait"
            android:theme="@style/Translucent" />
